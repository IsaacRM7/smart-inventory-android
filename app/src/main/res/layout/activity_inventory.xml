<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.Inventory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/simpleProgressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:visibility="gone" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchview"
            android:background="@drawable/material_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TableLayout
                style="@style/Theme.Smartinventoryandroid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                tools:layout_editor_absoluteX="1dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_sku"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:text="@string/sku"
                        android:textStyle="bold"
                        android:layout_marginStart="6dp"/>

                    <TextView
                        android:id="@+id/txt_sku_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.8"
                        android:textSize="17sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="@string/sku_name"
                        android:layout_marginStart="6dp"/>

                    <TextView
                        android:id="@+id/txt_theoretical_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:textSize="17sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="@string/theoretical"
                        android:layout_marginStart="6dp"/>

                    <TextView
                        android:id="@+id/txt_physical_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/physical"
                        android:layout_weight="0.9"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:layout_marginStart="6dp"/>

                    <TextView
                        android:id="@+id/txt_difference_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/difference"
                        android:layout_weight="1.2"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_marginStart="6dp"/>

                </TableRow>

            </TableLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sku_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp" />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu_options" />

</androidx.drawerlayout.widget.DrawerLayout>