<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:id="@+id/counted_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_margin="7dp"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_counted_plastic_platforms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:singleLine="false"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/txt_counted_wooden_platforms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:singleLine="false"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/txt_counted_boxes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:singleLine="false"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/txt_counted_units"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="20sp"
                android:singleLine="false"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/txt_counted_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:singleLine="false"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/txt_counted_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:singleLine="false"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/txt_counted_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:singleLine="false"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>