            android:textSize="25sp"
            android:text="AAAA"/>

        <TextView
            android:id="@+id/txt_theoretical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="teorico: " />

        <TextView
            android:id="@+id/txt_physical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
